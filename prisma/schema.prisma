datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Link {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  targetUrl   String
  clickCount  Int      @default(0)
  createdAt   DateTime @default(now())
  lastClicked DateTime?
}
